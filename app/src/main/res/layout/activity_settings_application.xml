<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings.SettingsApplicationActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/darkModeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/darkMode" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/darkModeSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/darkModeTextView"
            android:checked="false"
            android:paddingEnd="20sp"
            android:switchMinWidth="50sp"
            android:textOff="@string/darkModeTextOff"
            android:textOn="@string/darkModeTextOn" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/eventTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventTextView" />

        <androidx.appcompat.widget.SwitchCompat
            android:paddingEnd="20sp"
            android:id="@+id/eventSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/eventTextView"
            android:textOn="@string/eventTextOn"
            android:textOff="@string/eventTextOff"
            android:checked="false"
            android:switchMinWidth="50sp"
            />

    </RelativeLayout>

</LinearLayout>